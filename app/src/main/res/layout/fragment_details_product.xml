<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_product"
        android:layout_marginTop="59dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/desc_product"
        android:layout_centerVertical="true"
        android:layout_below="@+id/iv_product"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="36dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dim_product"
        android:layout_below="@+id/desc_product"
        android:layout_alignLeft="@+id/dim_product"
        android:layout_alignStart="@+id/dim_product"
        android:layout_marginLeft="36dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/price_product"
        android:layout_below="@+id/dim_product"
        android:layout_alignLeft="@+id/dim_product"
        android:layout_alignStart="@+id/dim_product"
        android:textAppearance="?android:attr/textAppearanceMedium" />
</RelativeLayout>